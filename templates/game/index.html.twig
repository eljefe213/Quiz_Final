{% extends 'base.html.twig' %}

{% block title %}Hello GameController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for question in game.getQuestionId %}
			<p>{{ question.getQuestion }}</p>
			{% for answer in question.getAnswer %}
				<li>
					<button class="answer-btn" data-id="{{ answer.isIsTrue }}">{{ answer.answer }}</button>
				</li>
			{% endfor %}
		{% endfor %}
	</div>

{% endblock %}
