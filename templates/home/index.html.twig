{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Page d'accueil</h1>
		<p>Bienvenue sur le fameux Quizz qui pourra changer votre vie !
		</p>
	</div>
	<div>

		{% if not app.user %}
			<a href="{{path('app_register')}}">
				<button>S'inscrire</button>
			</a>
			<a href="{{path('app_login')}}">
				<button>Se connecter</button>
			</a>
		{% endif %}
		{% if app.user %}

			<a
				href="{{path('app_game_create')}}">
				{# route a remplacer #}
				<button>Lancer une partie</button>
			</a>
		{% endif %}
	</div>
{% endblock %}
